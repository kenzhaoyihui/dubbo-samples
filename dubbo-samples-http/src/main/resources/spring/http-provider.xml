<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="http-provider"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <dubbo:protocol name="http" port="8080" server="tomcat"/>
    <dubbo:protocol name="dubbo" port="20880"/>

    <bean id="httpService" class="com.yzhao.dubbo.samples.http.impl.HttpServiceImpl" />
    <bean id="httpService1" class="com.yzhao.dubbo.samples.http.impl.HttpServiceImpl2"/>

    <dubbo:service interface="com.yzhao.dubbo.samples.http.api.HttpService" ref="httpService" protocol="http"/>
    <dubbo:service interface="com.yzhao.dubbo.samples.http.api.HttpService" ref="httpService1"/>

</beans>