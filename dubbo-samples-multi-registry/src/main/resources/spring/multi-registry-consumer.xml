<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="multi-registry-consumer"/>

    <dubbo:registry id="a1" address="zookeeper://127.0.0.1:2181" default="false"/>
    <dubbo:registry id="a2" address="zookeeper://127.0.0.1:2182"/>

    <dubbo:reference interface="com.yzhao.dubbo.samples.registry.api.DemoService" id="demoService1" registry="a1"/>
    <dubbo:reference interface="com.yzhao.dubbo.samples.registry.api.DemoService" id="demoService2" registry="a2"/>
    <dubbo:reference interface="com.yzhao.dubbo.samples.registry.api.HelloService" id="helloService1" registry="a1"/>
    <dubbo:reference interface="com.yzhao.dubbo.samples.registry.api.HelloService" id="helloService2" registry="a2"/>
</beans>