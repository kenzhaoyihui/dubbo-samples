<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="demo-provider"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <!--serialization ops not execute in IO thread, default is true-->
    <dubbo:protocol name="dubbo" port="20880">
        <dubbo:parameter key="decode.in.io" value="false"/>
    </dubbo:protocol>

    <bean id="demoService" class="com.yzhao.dubbo.samples.thread.impl.DemoServiceImpl" />

    <dubbo:service interface="com.yzhao.dubbo.samples.thread.api.DemoService" ref="demoService"/>
</beans>