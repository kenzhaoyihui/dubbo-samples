<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="mock-provider"/>

    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

    <dubbo:protocol name="dubbo" port="20880"/>

    <bean id="mockService" class="com.yzhao.dubbo.samples.mock.impl.MockServiceImpl" />

    <!--<dubbo:service interface="com.yzhao.dubbo.samples.mock.api.MockService" ref="mockService" mock="return null"/>-->

    <dubbo:service interface="com.yzhao.dubbo.samples.mock.api.MockService" ref="mockService" mock="com.yzhao.dubbo.samples.mock.api.MockServiceMock"/>
    <!--<dubbo:service interface="com.yzhao.dubbo.samples.mock.api.MockService" ref="mockService" mock="true"/>-->
</beans>